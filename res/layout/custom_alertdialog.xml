<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_shape_alertdialog_bg"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/id_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/id_textview_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/id_textview_yes"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/custom_selector_alertdialog_ok_bg"
            android:gravity="center"
            android:textColor="#4FB7AD" />

        <TextView
            android:id="@+id/id_textview_no"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/id_textview_yes"
            android:background="@drawable/custom_selector_alertdialog_ok_bg"
            android:gravity="center"
            android:textColor="#4FB7AD" />
    </RelativeLayout>

</RelativeLayout>